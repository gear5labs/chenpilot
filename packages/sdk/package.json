{
  "name": "@chenpilot-experimental/sdk",
  "version": "0.1.0",
  "description": "Core SDK for Chen Pilot cross-chain signature provider operations with multi-chain support, hardware wallet integration, and multi-signature coordination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",

    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "examples": "ts-node examples/index.ts",
    "examples:basic": "ts-node examples/basic-usage.ts",
    "examples:treasury": "ts-node examples/multi-signature-treasury.ts",
    "examples:bridge": "ts-node examples/cross-chain-bridge.ts",
    "examples:hardware": "ts-node examples/hardware-wallet-integration.ts",
    "examples:advanced": "ts-node examples/index.ts advanced",
    "examples:all": "ts-node examples/index.ts all",
    "examples:list": "ts-node examples/index.ts list",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"

    "docs": "typedoc --options typedoc.json",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage"

  },
  "keywords": [
    "defi",
    "cross-chain",
    "sdk",
    "chen-pilot",
    "signature-provider",
    "bitcoin",
    "stellar",
    "starknet",
    "hardware-wallet",
    "ledger",
    "albedo",
    "multi-signature",
    "typescript"
  ],

  "author": "Chen Pilot Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/chen-pilot/sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/chen-pilot/sdk/issues"
  },
  "homepage": "https://github.com/chen-pilot/sdk#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",

    "typedoc": "^0.27.9",

    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"

  "author": "Chen Pilot",
  "license": "MIT",
  "dependencies": {
    "@stellar/stellar-sdk": "^14.5.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.0"

  }
}
